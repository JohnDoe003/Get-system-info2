pipeline {
    agent any

    stages {
        stage('Test JIRA Step') {
            steps {
                script {
                    def jiraURL = 'https://manasvid.atlassian.net'
                    def NewJiraIssue = [fields: [project: [key: 'JT'],
                        summary: 'Test Issue: Build Failed Summary.',
                        description: 'Test Issue: Description of JIRA ticket-from Jenkins test pipeline',
                        issuetype: [name: 'Bug']]]

                    response = jiraNewIssue issue: NewJiraIssue, site: jiraURL

                    echo response.successful.toString()
                    echo response.data.toString()
                }
            }
        }
    }
}
