pipeline {
    agent any

    stages {
        stage('version') {
            steps {
                sh 'python3 --version'
            }
        }

        stage('getinfo') {
            steps {
                // Run the Python script using the Anaconda Python interpreter
                sh '/Users/manasvidhankani/opt/anaconda3/bin/python test.py'
            }
        }
    }

    post {
        failure {
            // Comment on Jira issue if build fails
            steps {
                script {
                    jiraComment body: 'Build failed for this job.', issueKey: 'MD-8'
                }
            }
        }
    }
}

